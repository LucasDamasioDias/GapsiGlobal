@model GapsiMVC.ViewModels.AdminEditarPsicologoViewModel
@{
    ViewData["Title"] = $"Editar Perfil de Psicólogo";
    Layout = "~/Views/Shared/_Layout_Gerenciamento.cshtml";
}

@section BotaoVoltar {
    <a asp-controller="PainelAdm" asp-action="VisualizarPsicologos" class="back-btn">← Voltar para a Lista</a>
}

<div class="form-section">
    <form asp-controller="PainelAdm" asp-action="EditarPsicologo" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FotoUrlAtual" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <h3>Perfil Público do Psicólogo</h3>
        <hr />

        <div class="row g-3 mb-3">
            <div class="col-md-8">
                <label asp-for="NomeCompleto" class="form-label fw-bold"></label>
                <input asp-for="NomeCompleto" class="form-control form-control-lg" />
            </div>
            <div class="col-md-4">
                <label asp-for="CRP" class="form-label fw-bold"></label>
                <input asp-for="CRP" class="form-control form-control-lg" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Biografia" class="form-label fw-bold"></label>
            <textarea asp-for="Biografia" class="form-control" rows="6"></textarea>
        </div>

        <hr class="my-4" />

        <div class="mb-3">
            <label class="form-label fw-bold">Foto Atual</label>
            @if (!string.IsNullOrEmpty(Model.FotoUrlAtual))
            {
                <img src="@Model.FotoUrlAtual" alt="Foto atual do psicólogo" class="img-thumbnail d-block mb-3" style="max-width: 200px;" />
            }
            else
            {
                <p>Nenhuma foto cadastrada.</p>
            }
        </div>

        <div class="mb-3">
            <label asp-for="NovaFoto" class="form-label fw-bold"></label>
            <input asp-for="NovaFoto" type="file" class="form-control" />
            <small class="form-text text-muted">Envie um novo arquivo apenas se desejar substituir a foto atual.</small>
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-acao-principal">Salvar Alterações</button>
        </div>
    </form>
</div>