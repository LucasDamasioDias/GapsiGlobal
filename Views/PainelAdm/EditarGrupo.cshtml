@model GapsiMVC.ViewModels.AdminEditarGrupoViewModel
@{
    ViewData["Title"] = $"Editar Grupo: {Model.Nome}";
    Layout = "~/Views/Shared/_Layout_Gerenciamento.cshtml";
}

@section BotaoVoltar {
    <a asp-controller="PainelAdm" asp-action="GerenciarGrupos" class="back-btn">← Voltar para a Lista de Grupos</a>
}

<div class="form-section">
    <form asp-controller="PainelAdm" asp-action="EditarGrupo" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImagemUrlAtual" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Nome" class="form-label fw-bold"></label>
            <input asp-for="Nome" class="form-control form-control-lg" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descricao" class="form-label fw-bold"></label>
            <textarea asp-for="Descricao" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <hr class="my-4" />

        <div class="mb-3">
            <label class="form-label fw-bold">Imagem Atual</label>
            @if (!string.IsNullOrEmpty(Model.ImagemUrlAtual))
            {
                <img src="@Model.ImagemUrlAtual" alt="Imagem atual do grupo" class="img-thumbnail" style="max-width: 200px; display: block; margin-bottom: 1rem;" />
            }
            else
            {
                <p>Nenhuma imagem cadastrada.</p>
            }
        </div>

        <div class="mb-3">
            <label asp-for="NovaImagem" class="form-label fw-bold"></label>
            <input asp-for="NovaImagem" type="file" class="form-control" />
            <small class="form-text text-muted">Envie um novo arquivo apenas se desejar substituir a imagem atual.</small>
            <span asp-validation-for="NovaImagem" class="text-danger"></span>
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-acao-principal">Salvar Alterações</button>
        </div>
    </form>
</div>