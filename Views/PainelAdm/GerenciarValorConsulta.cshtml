@model AdminEditarValorViewModel
@{
    ViewData["Title"] = "Gerenciar Valor da Consulta";
    Layout = "~/Views/Shared/_Layout_Gerenciamento.cshtml";
}

@section BotaoVoltar {
    <a asp-controller="PainelAdm" asp-action="Index" class="back-btn">← Voltar</a>
}

<div class="form-section">
    <form asp-action="GerenciarValorConsulta" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label asp-for="ValorConsulta" class="form-label fw-bold"></label>
            <input asp-for="ValorConsulta" class="form-control form-control-lg" />
            <span asp-validation-for="ValorConsulta" class="text-danger"></span>
        </div>
        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-acao-principal">Atualizar Valor</button>
        </div>
    </form>
</div>