<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gapsi Global</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/painel.css" asp-append-version="true" />

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VN2799T4Q9"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-VN2799T4Q9');
    </script>

</head>
<body class="painel-adm-body">

    <div class="container mt-4 mb-5">
        <div class="main-container">
            @RenderSection("BotaoVoltar", required: false)

            <h2 class="mb-4">@ViewData["Title"]</h2>
            <hr class="mb-4" />
            
            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
            }
            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger">@TempData["MensagemErro"]</div>
            }

            @RenderBody()

        </div>
    </div>

    <footer class="footer text-muted painel-footer mt-5">
        <div class="container text-center">
            © @DateTime.Now.Year - Gapsi Global. Todos os direitos reservados.
        </div>
    </footer>

    <div id="accessibility-widget">
        <button id="accessibility-toggle-btn" aria-label="Abrir painel de acessibilidade" aria-expanded="false">
            <img src="~/assets/icons/acessibilidade.png" alt="Ícone de Acessibilidade">
        </button>
        <div id="accessibility-panel" role="region">
            <h4>Opções de Acessibilidade</h4>
            <ul>
                <li><button id="btn-aumentar-fonte">A+ Aumentar Fonte</button></li>
                <li><button id="btn-diminuir-fonte">A- Diminuir Fonte</button></li>
                <li><button id="btn-alto-contraste">Alto Contraste</button></li>
            </ul>
        </div>
    </div>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/acessibilidade_script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>